---
import InnerContainer from "./InnerContainer.astro";
import OuterContainer from "./OuterContainer.astro";

export interface Props {
	class?: string;
	style?: string | Record<string, string>;
}

const { class: className = "", style } = Astro.props;
---
<OuterContainer class={className} style={style}>
	<InnerContainer>
		<slot />
	</InnerContainer>
</OuterContainer>