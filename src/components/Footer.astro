---
import InnerContainer from "./InnerContainer.astro";
import OuterContainer from "./OuterContainer.astro";
---
<footer class="mt-32">
	<OuterContainer>
		<div class="border-t border-zinc-100 pt-10 pb-16 dark:border-zinc-700/40">
			<InnerContainer>
				<div class="flex flex-col items-center justify-between gap-6 sm:flex-row">
					<div class="flex gap-6 text-sm font-medium text-zinc-800 dark:text-zinc-200">
						<a href="/about" class="transition hover:text-teal-500 dark:hover:text-teal-400">About</a>
						<a href="/articles" class="transition hover:text-teal-500 dark:hover:text-teal-400">Articles</a>
						<a href="/certifications" class="transition hover:text-teal-500 dark:hover:text-teal-400">Certifications</a>
					</div>
					<p class="text-sm text-zinc-400 dark:text-zinc-500">
						&copy; {new Date().getFullYear()} Michael Grenier. All rights reserved.
					</p>
				</div>
			</InnerContainer>
		</div>
	</OuterContainer>
</footer>